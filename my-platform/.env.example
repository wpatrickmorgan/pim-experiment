# PIM Platform Environment Configuration
# Copy this file to .env and update the values as needed

# ======================
# FRONTEND CONFIGURATION
# ======================

# API Base URL for frontend to connect to backend
# Development: http://localhost:8000/api
# Production: http://client-a.localtest.me/api
NEXT_PUBLIC_API_BASE_URL=http://localhost/api

# Frontend development server port
FRONTEND_PORT=3000

# Enable development tools (React Query DevTools, etc.)
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# ======================
# BACKEND CONFIGURATION
# ======================

# Frappe site name
FRAPPE_SITE_NAME=my-site

# Frappe backend port
FRAPPE_PORT=8000

# Database configuration (if using external database)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=pim_database
# DB_USER=frappe
# DB_PASSWORD=your_password

# ======================
# DEPLOYMENT CONFIGURATION
# ======================

# Frontend deployment path
FRONTEND_DEPLOY_PATH=/var/www/client-a-frontend

# Domain configuration
DOMAIN_NAME=client-a.localtest.me

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# ======================
# NGINX CONFIGURATION
# ======================

# Nginx configuration paths
NGINX_CONFIG_PATH=/etc/nginx/sites-available/client-a.conf
NGINX_ENABLED_PATH=/etc/nginx/sites-enabled/client-a.conf

# Log file paths
NGINX_ACCESS_LOG=/var/log/nginx/client-a-access.log
NGINX_ERROR_LOG=/var/log/nginx/client-a-error.log

# ======================
# DEVELOPMENT SETTINGS
# ======================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Hot reload for development
FAST_REFRESH=true

# ======================
# SECURITY SETTINGS
# ======================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://client-a.localtest.me,http://localhost

# Session configuration
SESSION_TIMEOUT=3600

# CSRF protection
CSRF_PROTECTION=true

# ======================
# MONITORING & LOGGING
# ======================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_MONITORING=false

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ======================
# MULTI-TENANT SETTINGS
# ======================

# Tenant identifier (for multi-tenant setups)
TENANT_ID=client-a

# Tenant-specific database prefix
# DB_PREFIX=client_a_

# Tenant-specific file storage path
# FILE_STORAGE_PATH=/var/www/client-a-files

