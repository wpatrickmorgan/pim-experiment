# PIM Experiment Monorepo Environment Configuration
# Copy this file to .env and customize as needed

# ======================
# Frontend Configuration
# ======================

# Next.js API Base URL (where the frontend will make API calls)
NEXT_PUBLIC_API_BASE_URL=http://client-a.localtest.me/api

# Frappe Files URL (for file uploads/downloads)
NEXT_PUBLIC_FILES_BASE_URL=http://client-a.localtest.me/files

# Frappe Assets URL (for static assets)
NEXT_PUBLIC_ASSETS_BASE_URL=http://client-a.localtest.me/assets

# Frontend Build Configuration
NEXT_PUBLIC_APP_NAME=PIM Experiment
NEXT_PUBLIC_APP_VERSION=1.0.0

# ======================
# Backend Configuration
# ======================

# Frappe Site Configuration
FRAPPE_SITE_NAME=client-a.local
FRAPPE_ADMIN_PASSWORD=admin

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=client_a_local
DB_USER=root
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# ======================
# Development Configuration
# ======================

# Local Development Domain
LOCAL_DOMAIN=client-a.localtest.me

# Backend Server Port
BACKEND_PORT=8000

# Frontend Development Port (for npm run dev)
FRONTEND_DEV_PORT=3000

# ======================
# Nginx Configuration
# ======================

# Web Root Directory
WEB_ROOT=/var/www/client-a-frontend

# Nginx Site Name
NGINX_SITE_NAME=client-a.local

# ======================
# API Configuration
# ======================

# CORS Settings
CORS_ALLOWED_ORIGINS=http://client-a.localtest.me,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ======================
# Security Configuration
# ======================

# JWT Secret (for API authentication)
JWT_SECRET=your-jwt-secret-here

# Session Configuration
SESSION_TIMEOUT=3600

# ======================
# Logging Configuration
# ======================

# Log Levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log File Paths
FRONTEND_LOG_PATH=./logs/frontend.log
BACKEND_LOG_PATH=./backend/logs/bench.log
NGINX_ACCESS_LOG=/var/log/nginx/client-a.access.log
NGINX_ERROR_LOG=/var/log/nginx/client-a.error.log

