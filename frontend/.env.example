# Example environment configuration
# Copy this file to .env.local for local development

# API Configuration
# For local development with Frappe running locally:
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# For production deployment with separate backend:
# NEXT_PUBLIC_API_BASE_URL=https://your-frappe-site.com/api

# Deployment mode
DEPLOYMENT_MODE=separate

# Optional: Backend URL (if different from API base)
# NEXT_PUBLIC_BACKEND_URL=https://your-frappe-site.com

# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Optional: Error reporting
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
