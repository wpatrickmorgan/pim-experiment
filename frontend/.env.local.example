# Example environment configuration for local development
# Copy this file to .env.local and update with your values

# Backend API URL - update this to point to your backend server
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Optional: Backend base URL (without /api suffix)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Development settings
NODE_ENV=development

# Optional: Enable React Query devtools in development
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Optional: Custom port for frontend development server
# PORT=3000

# Optional: Analytics and monitoring (leave empty for development)
# NEXT_PUBLIC_ANALYTICS_ID=
# NEXT_PUBLIC_SENTRY_DSN=

